<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppNotas.Views.Notas.IniciarSesionView"
             Title="IniciarSesionView">
    <VerticalStackLayout>
        <Label 
            FontSize="36"
            Text="Inicio de sesión a AppNotas"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Grid RowDefinitions="2*,2*,*,*" ColumnDefinitions="*,*">
            <Label Grid.Row="0" Grid.Column="0" 
                   HorizontalTextAlignment="End"
                   VerticalTextAlignment="Center"
                   Margin="40,20">Email:</Label>
            <Entry Grid.Row="0" Grid.Column="1" 
                   x:Name="txtEmail"
                   Margin="10,20,100,20"></Entry>

            <Label Grid.Row="1" Grid.Column="0" 
                   HorizontalTextAlignment="End"
                   VerticalTextAlignment="Center"
                   Margin="40,20">Contraseña:</Label>
            <Entry Grid.Row="1" Grid.Column="1" 
                   x:Name="txtPassword"
                   Margin="10,20,100,20" IsPassword="True"></Entry>

            <Button Text="Iniciar sesión"
                    x:Name="btnIniciarSesion"
                    Grid.Row="2" Grid.Column="0"
                    Clicked="btnIniciarSesion_Clicked"
                    Grid.ColumnSpan="2"
                    Margin="100,10"
                    ></Button>

            <Button Text="Registrarse"
                    x:Name="btnRegistrarse"
                    Grid.Row="3" Grid.Column="0"
                    Clicked="btnRegistrarse_Clicked"
                    Grid.ColumnSpan="2"
                    Margin="100,10"
                    ></Button>
        </Grid>
    </VerticalStackLayout>
</ContentPage>