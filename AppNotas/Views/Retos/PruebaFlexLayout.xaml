<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppNotas.Views.Retos.PruebaFlexLayout"
             Title="PruebaFlexLayout">
    <ScrollView>
        <VerticalStackLayout>
            <FlexLayout Direction="Column">
                <Label FontSize="30" HorizontalTextAlignment="Center">Elija un producto</Label>
                <Frame CornerRadius="20" Margin="20,10">
                    <FlexLayout Direction="Column" AlignItems="Center">
                        <Label FontSize="22">Coca Cola 2Lts</Label>
                        <Image Source="contacts.png" Aspect="AspectFill"/>
                        <Label Style="{StaticResource LabelPrecio}">$1350</Label>
                    </FlexLayout>
                </Frame>
            </FlexLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>